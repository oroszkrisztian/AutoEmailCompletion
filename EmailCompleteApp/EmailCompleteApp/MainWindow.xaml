<Window x:Class="EmailCompleteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailCompleteApp"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="800" Width="1200">

    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Draggable Title Bar -->
            <Border Grid.Row="0" 
                    Background="Transparent"
                    
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Email Completion App"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontWeight="SemiBold"
                               FontFamily="Segoe UI"
                               Margin="20,0,0,0"
                               Foreground="White"/>

                    <!-- Window Control Buttons -->
                    <StackPanel HorizontalAlignment="Right" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                        
                        <!-- Minimize Button -->
                        <Button
                                x:Name="MinimizeButton"
                                Width="30"
                                Height="30"
                                Margin="0,0,5,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                Click="MinimizeButton_Click"
                                MouseEnter="MinimizeButton_MouseEnter"
                                MouseLeave="MinimizeButton_MouseLeave">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="15"
                                            Width="30"
                                            Height="30">
                                        <TextBlock Text="−"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  FontSize="26"
                                                  FontWeight="Bold"
                                                  Foreground="{TemplateBinding Foreground}"
                                                  Margin="0,-3,0,0"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Close Button -->
                        <Button
                                x:Name="CloseButton"
                                Width="30"
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                Click="CloseButton_Click"
                                MouseEnter="CloseButton_MouseEnter"
                                MouseLeave="CloseButton_MouseLeave">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="15"
                                            Width="30"
                                            Height="30">
                                        <TextBlock Text="✕"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="{TemplateBinding Foreground}"
                                                  Margin="-1,-3,0,0"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="135*"/>
                    <ColumnDefinition Width="631*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.95*"/>
                </Grid.RowDefinitions>

                <!-- Left Sidebar -->
                <Border Grid.Column="0" Grid.RowSpan="2"
                        Background="#1E1E2F"
                        CornerRadius="0,0,0,20">
                    <StackPanel>
                        <Button x:Name="EmailType1Button"
                                Content="Email type 1"
                                Margin="10"
                                Background="White"
                                Foreground="#272537"
                                Click="EmailType1Button_Click"
                                MouseEnter="EmailType1Button_MouseEnter"
                                MouseLeave="EmailType1Button_MouseLeave">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="EmailType2Button"
                                Content="Email type 2"
                                Margin="10"
                                Background="White"
                                Foreground="#272537"
                                Click="EmailType2Button_Click"
                                MouseEnter="EmailType2Button_MouseEnter"
                                MouseLeave="EmailType2Button_MouseLeave">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="EmailType3Button"
                                Content="Email type 3"
                                Margin="10"
                                Background="White"
                                Foreground="#272537"
                                Click="EmailType3Button_Click"
                                MouseEnter="EmailType3Button_MouseEnter"
                                MouseLeave="EmailType3Button_MouseLeave">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <!--Main Content Area-->
                <Border Grid.Column="1" Grid.RowSpan="2"
                        Background="White"
                        CornerRadius="0,0,20,0">
                    <ContentControl x:Name="MainContentArea">
                        <Grid>
                            <TextBlock Text="Welcome to the Email Completion App!"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#272537"/>
                        </Grid>
                    </ContentControl>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>